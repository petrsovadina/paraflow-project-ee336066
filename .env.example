# Benjamin AI - Environment Variables Template
# Copy this file to .env.local and fill in your values

# ============================================
# Supabase Configuration
# ============================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ============================================
# Anthropic Claude AI
# ============================================
# Get API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-api-key

# ============================================
# Azure AD Authentication (Optional for MVP)
# ============================================
# Required for SSO integration with hospital systems
AZURE_AD_CLIENT_ID=your-azure-ad-client-id
AZURE_AD_CLIENT_SECRET=your-azure-ad-client-secret
AZURE_AD_TENANT_ID=your-azure-ad-tenant-id

# ============================================
# Medical Data Sources (Optional)
# ============================================
# PubMed API (free, no key required for basic usage)
PUBMED_API_KEY=

# SÃšKL Database (Czech drug registry - public API)
SUKL_API_URL=https://api.sukl.cz/

# ============================================
# Application Configuration
# ============================================
# Next.js public URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment (development | staging | production)
NODE_ENV=development

# Enable debug mode
DEBUG=false

# ============================================
# Feature Flags
# ============================================
# Enable experimental features
ENABLE_VZP_NAVIGATOR=false
ENABLE_FONS_INTEGRATION=false
ENABLE_TRANSLATOR=true
ENABLE_EPICRISIS=true

# ============================================
# Security & GDPR
# ============================================
# Encryption key for sensitive data
ENCRYPTION_KEY=your-32-character-encryption-key

# Session secret
SESSION_SECRET=your-session-secret-key

# ============================================
# Monitoring & Analytics (Optional)
# ============================================
# Sentry DSN for error tracking
SENTRY_DSN=

# Analytics tracking ID
ANALYTICS_ID=
